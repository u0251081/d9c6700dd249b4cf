<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".toStart"
    android:id="@+id/drawerLayout"
    android:background="@drawable/side_nav_bar"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/norecord"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="正在紀錄"
            android:textColor="#000000"
            android:textSize="24dp"
            android:background="#FF3333"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="109dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/roadlist"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:onClick="changeProcess"
                android:background="@drawable/list2"
               />

            <TextView
                android:id="@+id/empty"
                android:layout_width="258dp"
                android:layout_height="77dp"
                android:gravity="center"
                android:textColor="#000000"/>


            <Button
                android:id="@+id/user"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/user2"

                android:onClick="changeProcess2" />
        </LinearLayout>


        <TextView
            android:id="@+id/tvMsg"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:textStyle="bold"
             />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/empty2"
                android:layout_width="70dp"
                android:layout_height="110dp" />

            <TextView
                android:id="@+id/current_record"
                android:layout_width="230dp"
                android:layout_height="230dp"
                android:background="@drawable/u9"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/current_record2"
                android:layout_width="230dp"
                android:layout_height="230dp"
                android:background="@drawable/u10"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/current_record3"
                android:layout_width="230dp"
                android:layout_height="230dp"
                android:background="@drawable/u11"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/current_record4"
                android:layout_width="230dp"
                android:layout_height="230dp"
                android:background="@drawable/u12"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/current_record5"
                android:layout_width="230dp"
                android:layout_height="230dp"
                android:background="@drawable/u13"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/nocurrentrecord"
                android:layout_width="230dp"
                android:layout_height="230dp"
                android:background="@drawable/u14"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/empty3"
                android:layout_width="71dp"
                android:layout_height="104dp" />
            />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="109dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/stop"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:autoText="false"
                android:background="@drawable/stop2"
                android:text="停止" />

            <TextView
                android:id="@+id/empty4"
                android:layout_width="248dp"
                android:layout_height="36dp"
                android:gravity="center"
                />


            <Button
                android:id="@+id/map"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:onClick="changeProcess3"
                android:background="@drawable/map2" />
        </LinearLayout>


    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/side_nav_bar"
        app:menu="@menu/navigation_menu"
        android:id="@+id/navigation_view"
        android:layout_gravity="start">

    </android.support.design.widget.NavigationView>


</android.support.v4.widget.DrawerLayout>