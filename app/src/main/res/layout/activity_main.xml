<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/drawerLayout"
    android:background="@drawable/side_nav_bar"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="71dp">

        <TextView
            android:id="@+id/norecord"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="#00DD00"
            android:gravity="center"
            android:textSize="24dp"
            android:text="目前沒有在紀錄"
            android:textColor="#000000"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="109dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/roadlist"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/list2"
                android:onClick="changeProcess" />

            <TextView
                android:id="@+id/welcomeusertext"
                android:layout_width="258dp"
                android:layout_height="86dp"
                android:gravity="center"
                android:textColor="#000000" />

            <Button
                android:id="@+id/user"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/user2"
                android:onClick="changeProcess2" />
        </LinearLayout>


        <TextView
            android:id="@+id/tvMsg"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:orientation="horizontal">

            <!-- 123321 -->

            <TextView
                android:id="@+id/empty2"
                android:layout_width="70dp"
                android:layout_height="50dp" />

            <TextView
                android:id="@+id/current_record"
                android:layout_width="230dp"
                android:layout_height="230dp"
                android:background="@drawable/u14" />

            <TextView
                android:id="@+id/empty3"
                android:layout_width="50dp"
                android:layout_height="50dp" />
            />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="109dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/start"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/start2"
                android:text="開始" />

            <Button
                android:id="@+id/btnlogout"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_x="0dp"
                android:text="登出"
                android:layout_y="448dp"
                android:gravity="center"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@android:color/white"
             />

            <Button
                android:id="@+id/map"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/map2"
                android:onClick="changeProcess3" />
        </LinearLayout>


    </LinearLayout>


<android.support.design.widget.NavigationView
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/side_nav_bar"
    app:menu="@menu/navigation_menu"
    android:id="@+id/navigation_view"
    android:layout_gravity="start">

</android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>